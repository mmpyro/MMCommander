        <Setter Property="Background" Value="#FF181818"/>
        <Setter Property="Foreground" Value="#FFBABABA"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#FF0092BE"/>
