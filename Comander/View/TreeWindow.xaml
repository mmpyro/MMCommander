<Window x:Class="Comander.View.TreeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Comander.ViewModel"
             mc:Ignorable="d" 
             Height="320" Width="250" ResizeMode="NoResize" Title="TreeView">
    <Window.Resources>
        <local:TreeManager x:Key="TManager"/>
    </Window.Resources>
    <StackPanel Background="Gray" DataContext="{StaticResource TManager}">
        <TreeView   ItemsSource="{Binding Folders}" Height="300">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Folders}">
                    <TextBlock Text="{Binding Path=Name, Mode=OneWay}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>  
        </TreeView>
    </StackPanel>
</Window>
